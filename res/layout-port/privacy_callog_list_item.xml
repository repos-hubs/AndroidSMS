<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content" android:paddingBottom="2dp"
	android:paddingTop="2dp" android:background="@drawable/red_sms_dialogue_messenger_item_bg">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:gravity="center_vertical">
		<LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical" android:layout_weight="1" android:layout_marginRight="3dp">
			<TextView android:textColor="@color/light_black" android:layout_width="wrap_content" android:id="@+id/privacy_callog_list_item_contact_tv" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:singleLine="true" android:textSize="17sp" android:layout_height="wrap_content"></TextView>
			<ImageView android:id="@+id/privacy_callog_list_item_call_in_iv" android:layout_width="wrap_content" android:src="@drawable/privacy_icon_dajin" android:layout_height="wrap_content"></ImageView>
			<ImageView android:id="@+id/privacy_callog_list_item_call_out_iv" android:layout_width="wrap_content" android:src="@drawable/privacy_icon_bochu" android:layout_height="wrap_content"></ImageView>
		</LinearLayout>
		<TextView android:layout_height="wrap_content"
			android:layout_marginTop="8dp" android:layout_width="wrap_content"
			android:id="@+id/privacy_callog_list_item_date_tv" android:layout_marginRight="5dp" android:textColor="@color/light_black_text_color"></TextView>
	</LinearLayout>
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:gravity="center_vertical" android:orientation="horizontal">
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/privacy_callog_list_item_number_tv"
			android:layout_weight="1" android:layout_marginLeft="8dp"
			android:layout_centerVertical="true" android:textColor="@color/light_yellow_text_color"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/privacy_callog_list_item_phone_address_tv"
			android:layout_alignParentRight="true" android:layout_marginRight="8dp"
			android:layout_centerVertical="true" android:textColor="@color/light_black_text_color"></TextView>

	</RelativeLayout>


</LinearLayout>