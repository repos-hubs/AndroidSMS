<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_horizontal|center"
	android:gravity="center_horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:paddingTop="0dip">

	<LinearLayout android:layout_height="wrap_content"
		android:orientation="vertical" android:paddingBottom="15dip"
		android:layout_width="300dip">


		<LinearLayout android:gravity="center"
			android:layout_height="45dp" android:layout_width="fill_parent" android:background="@drawable/red_dialog_bg_top">
			<ImageView android:layout_marginRight="5dp"
				android:layout_gravity="center_vertical" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="2dp"></ImageView>
			<TextView android:id="@+id/title_text_tv"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white" android:text="@string/privacy_change_email_title" android:textSize="24sp"></TextView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:gravity="center_horizontal" android:layout_weight="1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/dialog_bg_bottom">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1">
				<LinearLayout
					android:layout_width="wrap_content" android:layout_height="fill_parent"
					android:orientation="vertical" android:gravity="center" android:paddingTop="5dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black" android:text="@string/privacy_reset_pwd_email" android:textSize="17sp"></TextView>
					<EditText android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp" android:paddingBottom="3dip"
						android:paddingTop="3dip" android:layout_height="40dip" android:paddingLeft="6dip"
						android:singleLine="true" android:paddingRight="3dip"
						android:layout_width="250dp" android:layout_marginTop="8dp" android:maxLength="50" android:id="@+id/privacy_email_et">
						<requestFocus></requestFocus>
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="3dip"
				android:paddingRight="3dip" android:layout_marginTop="5dp">

				<View android:layout_width="fill_parent" android:layout_height="1dp"
					android:background="@drawable/fengexian"></View>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="8dip" android:gravity="center_horizontal"
				android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_marginBottom="12dp">
				<Button android:text="@android:string/ok" android:id="@+id/button_ok"
					android:padding="5dp" android:layout_marginBottom="2dp"
					android:layout_height="wrap_content" android:textColor="@color/black" android:background="@drawable/red_button_bg_main_selector" android:layout_width="wrap_content" style="@style/TextShadowStyle" android:textSize="22sp" android:gravity="center"></Button>
				<Button android:text="@android:string/cancel" android:id="@+id/button_cancel"
					android:padding="5dp" android:layout_marginLeft="10dp"
					android:layout_marginBottom="2dp" android:layout_height="wrap_content" android:textColor="@color/black" android:background="@drawable/red_button_bg_main_selector" android:layout_width="wrap_content" android:textSize="22sp" style="@style/TextShadowStyle" android:gravity="center"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
