<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_horizontal|center"
	android:gravity="center_horizontal" android:paddingTop="0dip"
	android:layout_height="wrap_content" android:layout_width="wrap_content">

	<LinearLayout android:orientation="vertical"
		android:paddingBottom="15dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content">


		<LinearLayout android:gravity="center"
			android:layout_width="fill_parent" android:background="@drawable/red_dialog_bg_top"
			android:layout_height="wrap_content">
			<ImageView android:layout_marginRight="5dp"
				android:layout_gravity="center_vertical" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="2dp"></ImageView>
			<TextView android:id="@+id/title_text_tv"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white" android:text="@string/privacy_contact_add_dialog_title"
				android:textSize="24sp"></TextView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:gravity="center_horizontal" android:layout_weight="1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/dialog_bg_bottom" android:paddingTop="5dp">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center"
				android:orientation="vertical" android:layout_weight="1">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:paddingLeft="12dp" android:paddingRight="12dp">
					<TextView android:textColor="@color/light_black"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/privacy_contact_add_number_text"
						android:textSize="17sp"></TextView>
					<EditText android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:inputType="number"
						android:id="@+id/privacy_contact_add_number_et"
						android:phoneNumber="true" android:singleLine="true"
						android:hint="@string/privacy_contact_add_essential_text">
					</EditText>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:paddingLeft="12dp" android:paddingRight="12dp">
					<TextView android:textColor="@color/light_black"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/privacy_contact_add_contact_name"
						android:textSize="17sp"></TextView>
					<EditText android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:singleLine="true"
						android:id="@+id/privacy_contact_add_contact_name_et"
						android:hint="@string/privacy_contact_add_optional_text"
						android:inputType="text" android:maxLength="20">
					</EditText>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:paddingLeft="12dp" android:paddingRight="12dp" android:id="@+id/spinner_linear">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textColor="@color/light_black"
						android:text="@string/privacy_contact_add_block_type_text"
						android:textSize="17sp"></TextView>
					<!-- 
					<Spinner android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:id="@+id/privacy_contact_add_blocked_type_spinner"
						android:prompt="@string/privacy_contact_set_blocked_type_prompt"></Spinner>
					-->
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="3dip"
				android:paddingRight="3dip" android:layout_marginTop="25dp">

				<View android:layout_width="fill_parent" android:layout_height="1dp"
					android:background="@drawable/fengexian"></View>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="8dip" android:gravity="center_horizontal"
				android:layout_gravity="center_horizontal" android:layout_width="fill_parent"
				android:layout_marginBottom="15dp">
				<Button android:id="@+id/button_ok" android:padding="5dp"
					android:layout_marginBottom="2dp" style="@style/TextShadowStyle"
					android:layout_height="wrap_content" android:textColor="@color/black"
					android:text="@string/privacy_contact_add_button_save"
					android:background="@drawable/red_button_bg_main_selector"
					android:layout_width="wrap_content" android:gravity="center"
					android:textSize="22sp"></Button>
				<Button android:text="@android:string/cancel" android:id="@+id/button_cancel"
					android:padding="5dp" android:layout_marginLeft="10dp"
					style="@style/TextShadowStyle" android:layout_marginBottom="2dp"
					android:layout_height="wrap_content" android:textColor="@color/black"
					android:background="@drawable/red_button_bg_main_selector"
					android:layout_width="wrap_content" android:gravity="center"
					android:textSize="22sp"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
