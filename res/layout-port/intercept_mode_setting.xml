<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:duplicateParentState="false"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/red_bg_color">

	<LinearLayout android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="wrap_content"
		android:background="@drawable/red_sms_dialogue_details_header_bg">

		<TextView android:id="@+id/title_tv" android:gravity="center"
			android:textColor="@color/white" android:layout_width="fill_parent"
			android:textSize="24sp" android:layout_height="wrap_content"
			android:layout_centerInParent="true" />


	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_weight="1" android:layout_height="fill_parent"
		android:padding="5dp">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/red_theme_bg" />
		<ListView android:layout_width="fill_parent"
			android:cacheColorHint="#00000000" android:divider="@null"
			android:id="@id/android:list" android:layout_alignParentTop="true"
			android:layout_height="fill_parent" />
	</RelativeLayout>
</LinearLayout>