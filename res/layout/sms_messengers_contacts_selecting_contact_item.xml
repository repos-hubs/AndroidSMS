<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center_vertical" 
	android:focusable="false"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout 
	    android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" 
		android:focusable="false"
		android:background="@drawable/sms_dialogue_messenger_item_bg" 
		android:gravity="center_vertical">
		
		<TextView android:id="@+id/letterTextView"
			android:focusable="false"
			android:gravity="center_vertical|center_horizontal"
			android:paddingBottom="8dp"
			android:textColor="@color/grey"
			android:textStyle="bold"
			android:layout_height="wrap_content" android:layout_width="40dp" android:textSize="22sp"/>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:orientation="vertical" 
			android:focusable="false"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp">
			<TextView 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:id="@+id/contactDisplayNameTextView"
				android:textColor="@color/black" 
				android:textSize="20sp" 
				android:focusable="false" 
				android:singleLine="true"
				android:paddingBottom="5dp"
				android:maxWidth="120dp"/>
			<TextView 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:id="@+id/contactNumTextView"
				android:textColor="@color/dark_blue" 
				android:gravity="bottom"
				android:textSize="17sp" 
				android:paddingTop="5dp"
				android:focusable="false" />			
				
		</LinearLayout>
		<CheckBox 
		    android:button="@drawable/checkbox_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/contactSelectImageView"
		    android:layout_marginRight="5dp"
		    android:padding="5dp"/>
	</LinearLayout>
	
</RelativeLayout>
