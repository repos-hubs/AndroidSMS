<resources>	
	<style name="loginDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<!-- <item name="android:windowIsFloating">true</item> <item name="android:windowIsTranslucent">true</item> -->
		<item name="android:windowNoTitle">true</item>
		<!-- <item name="android:background">@drawable/null</item> -->
		<item name="android:windowBackground">@color/white</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:layout_width">100dip</item>
		<item name="android:layout_height">100dip</item>
	</style>	
	<style name="dialogActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowBackground">@drawable/filled_box</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="TextShadowStyle">

		<item name="android:textColor">@color/shadow_text_color</item>
		<item name="android:shadowColor">@color/white</item>

		<item name="android:shadowDy">1</item>

		<item name="android:shadowRadius">2</item>

	</style>
	<style name="menu_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
