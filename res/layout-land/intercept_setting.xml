			<RelativeLayout android:id="@+id/intercept_mode_rl"
				android:layout_marginTop="5dip" android:gravity="center_vertical"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/green_sms_dialogue_messenger_item_bg">
				<ImageView android:id="@+id/intercept_model_iv"
					android:layout_marginTop="20dip" android:layout_height="wrap_content"
					android:layout_marginRight="10dp" android:layout_alignParentRight="true"
					android:layout_width="wrap_content" android:src="@drawable/arrow_02"></ImageView>
				<TextView android:id="@+id/intercept_tag_model_tv"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="@color/black" android:layout_marginRight="2dp"
					android:textSize="20sp" android:text="@string/select_intercept_model"></TextView>
				<TextView android:id="@+id/default_tag_model_tv"
					android:layout_marginTop="2dip" android:layout_below="@id/intercept_tag_model_tv"
					android:layout_alignLeft="@id/intercept_tag_model_tv"
					android:layout_width="wrap_content" android:textColor="@color/text_default_color"
					android:layout_height="wrap_content" android:layout_marginRight="2dp"
					android:textSize="17sp" android:text="@string/default_model"></TextView>
				<TextView android:layout_height="wrap_content"
					android:layout_toRightOf="@id/default_tag_model_tv"
					android:layout_alignTop="@id/default_tag_model_tv"
					android:layout_below="@id/intercept_tag_model_tv" android:textSize="17sp"
					android:layout_width="wrap_content" android:textColor="@color/text_default_color"
					android:id="@+id/current_intercept_mode" android:text="@string/defaults"></TextView>
			</RelativeLayout>


			<RelativeLayout android:id="@+id/key_word_rl"
