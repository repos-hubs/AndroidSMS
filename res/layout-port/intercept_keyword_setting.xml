<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/red_bg_color">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center" android:background="@drawable/red_sms_dialogue_details_header_bg"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/function_title_tv"
				android:textSize="24sp" android:gravity="center"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="@color/white" />
		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="10dp"
			android:gravity="center_vertical">
			<EditText android:layout_width="fill_parent"
				android:layout_centerVertical="true" android:layout_height="wrap_content"
				android:background="@drawable/softcenter_input_bg"
				android:paddingLeft="6dp" android:lines="1" android:maxLines="1"
				android:singleLine="true" android:id="@+id/key_word_edit_text"
				android:layout_toLeftOf="@+id/add_action_linear"
				android:layout_marginRight="5dp" android:hint="@string/intercept_keyword_hint"></EditText>
			<LinearLayout android:paddingBottom="3dp"
				android:gravity="center" android:layout_width="wrap_content"
				android:paddingLeft="5dp" android:layout_height="wrap_content"
				android:background="@drawable/red_search_bg_selector"
				android:paddingTop="3dp" android:paddingRight="5dp"
				android:id="@+id/add_action_linear" android:layout_alignParentRight="true">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@color/white"
					android:textSize="18dip" android:text="@string/intercept_add_text"></TextView>

			</LinearLayout>
		</RelativeLayout>


		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">


			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:background="@drawable/red_theme_bg" />


			<ListView android:layout_width="fill_parent"
				android:paddingLeft="5dip" android:paddingRight="5dip"
				android:layout_marginTop="8dip" android:layout_height="fill_parent"
				android:cacheColorHint="#00000000" android:divider="@null"
				android:scrollbars="none" 
				android:id="@+id/keyword_listview" />

		</RelativeLayout>






	</LinearLayout>
</LinearLayout>