<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/bg_color">
	<LinearLayout android:layout_width="fill_parent"
		android:paddingLeft="5dip" android:layout_height="wrap_content"
		android:layout_marginTop="5dip" android:gravity="center_vertical">
		<LinearLayout android:layout_weight="1"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_marginRight="5dp" android:gravity="right|center_vertical">

			<TextView android:layout_width="wrap_content"
				android:textColor="@color/light_black" android:layout_marginRight="5dip"
				android:layout_height="wrap_content" android:text="@string/privacy_contact_menu_select_all"
				android:textSize="17sp" />
			<CheckBox android:id="@+id/select_al_cb"
				android:layout_marginLeft="10dip" android:layout_height="40dip"
				android:focusable="false" android:padding="5dip" android:textColor="@color/black"
				android:background="@null" android:button="@drawable/green_checkbox_button"
				android:layout_width="40dip" android:gravity="center"/>

		</LinearLayout>
	</LinearLayout>
	<ImageView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:scaleType="fitXY"
		android:src="@drawable/sms_separator_line" />
	<ListView android:layout_width="fill_parent"
		android:cacheColorHint="#00000000" android:divider="@drawable/sms_separator_line"
		android:id="@id/android:list" android:layout_height="fill_parent"
		android:layout_above="@+id/privacy_contact_import_button_linear"
		android:layout_weight="1" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:scaleType="fitXY"
			android:src="@drawable/sms_separator_line" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingTop="5dp" android:paddingBottom="5dp">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_vertical|center_horizontal">
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content" style="@style/TextShadowStyle"
					android:textStyle="bold" android:background="@drawable/green_button_bg_main_selector"
					android:id="@+id/button_ok" android:text="@string/privacy_contact_import_action"
					android:textColor="@color/light_black" android:gravity="center" android:textSize="22sp"/>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_vertical|center_horizontal">
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/sms_contact_cancel"
					android:textStyle="bold"
					style="@style/TextShadowStyle"
					android:background="@drawable/green_button_bg_main_selector"
					android:id="@+id/button_cancel" android:textColor="@color/light_black" android:gravity="center" android:textSize="22sp"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
