<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/red_sms_dialogue_messenger_item_bg"
	android:gravity="center_vertical">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:layout_marginLeft="10dp" android:gravity="left|center_vertical"
			android:layout_toLeftOf="@+id/select_cb_linear">
			<TextView android:layout_height="wrap_content" android:id="@+id/list_item_title"
				android:layout_width="wrap_content" android:textColor="@color/black"
				android:textSize="20sp" android:layout_marginTop="3dip"></TextView>
			<TextView android:layout_height="wrap_content" android:id="@+id/list_item_desp"
				android:layout_width="wrap_content" android:textColor="@color/light_yellow_text_color"
				android:textSize="17sp" android:lines="1" android:singleLine="true"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_width="wrap_content"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:id="@+id/select_cb_linear" android:layout_marginLeft="5dp">
			<CheckBox android:layout_height="wrap_content" android:id="@+id/select_cb"
				android:layout_width="wrap_content" android:button="@drawable/red_checkbox_button"
				android:focusable="false" android:focusableInTouchMode="false"
				android:clickable="false"></CheckBox>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
