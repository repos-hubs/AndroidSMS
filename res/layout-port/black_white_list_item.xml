<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">



	<RelativeLayout android:id="@+id/header"
		android:background="@drawable/red_privacy_bar" android:layout_width="fill_parent"
		android:layout_height="wrap_content">


		<TextView android:id="@+id/tag_tv" android:layout_width="wrap_content"
			android:paddingTop="3dip" android:paddingBottom="3dip"
			android:layout_centerVertical="true" android:layout_height="wrap_content"
			android:textSize="18sp" android:layout_marginLeft="8dip"
			android:textColor="@color/light_black" />
		<ImageView android:id="@+id/tag_iv" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:background="@drawable/red_intercept_show_all_icon_selector"
			android:layout_marginRight="8dip" />

	</RelativeLayout>

	<RelativeLayout android:id="@+id/content_linear"
		android:background="@drawable/red_sms_dialogue_messenger_item_bg"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:focusable="false" android:gravity="center_vertical"
		android:paddingTop="3dip" android:paddingBottom="5dip">
		<ImageView android:id="@+id/contactIconImageView"
			android:focusable="false" android:padding="3dp"
			android:layout_margin="3dp" android:layout_height="60dip"
			android:layout_width="60dip" android:background="@drawable/sms_contact_profile" />
		<TextView android:id="@+id/phone_num_tv" android:paddingLeft="3dip"
			android:layout_toRightOf="@id/contactIconImageView"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginTop="6dip" android:textColor="@color/black"
			android:textSize="20sp" android:focusable="false" android:singleLine="true" />
		<TextView android:id="@+id/contact_display_name_tv"
			android:layout_toRightOf="@id/contactIconImageView"
			android:layout_below="@id/phone_num_tv" android:paddingLeft="3dip"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:textColor="@color/light_black_text_color" android:textSize="17sp"
			android:focusable="false" android:singleLine="true" />

	</RelativeLayout>



	<LinearLayout android:id="@+id/bottom_linear"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:layout_marginTop="-2dip"
		android:background="@drawable/red_intercept_handle_bg">
		<TextView android:id="@+id/del_tv" android:layout_weight="1"
			android:layout_width="fill_parent" android:singleLine="true"
			android:textSize="18sp" android:textColor="@drawable/red_intercept_textcolor_selector"
			android:gravity="center_horizontal" android:layout_height="wrap_content" />
		<TextView android:id="@+id/edit_tv" android:layout_width="fill_parent"
			android:singleLine="true" android:layout_weight="1" android:gravity="center_horizontal"
			android:textSize="18sp" android:textColor="@drawable/red_intercept_textcolor_selector"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/more_tv" android:layout_width="fill_parent"
			android:layout_weight="1" android:singleLine="true" android:gravity="center_horizontal"
			android:textSize="18sp" android:textColor="@drawable/red_intercept_textcolor_selector"
			android:layout_height="wrap_content" />
	</LinearLayout>




</LinearLayout>
