<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<com.kindroid.android.view.AmazingListView
		class="com.kindroid.android.view.AmazingListView"
		android:layout_weight="1" android:layout_marginTop="5dip"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:cacheColorHint="#00000000" android:divider="@null"
		android:scrollbars="none" android:id="@+id/balck_white_listview" />


	<LinearLayout android:layout_width="fill_parent"
		android:paddingTop="1dip" android:paddingBottom="1dip" 
		android:layout_height="wrap_content" android:gravity="center_horizontal">
		<TextView android:id="@+id/add_blacklist_tv"
			android:layout_width="wrap_content" android:paddingLeft="3dip"
			android:paddingRight="3dip" android:gravity="center"
			android:background="@drawable/button_bg_main_selector" style="@style/TextShadowStyle"
			android:textSize="18sp" android:layout_height="wrap_content" />

		<TextView android:id="@+id/add_whitelist_tv"
			android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content" android:layout_marginLeft="15dip"
			android:gravity="center" android:background="@drawable/button_bg_main_selector"
			style="@style/TextShadowStyle" android:textSize="18sp"
			android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>
