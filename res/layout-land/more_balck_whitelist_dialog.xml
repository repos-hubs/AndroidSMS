<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_horizontal|center"
	android:gravity="center_horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:paddingTop="0dip">


	<RelativeLayout android:layout_width="fill_parent"
		android:background="@drawable/green_dialog_bg_top" android:layout_height="wrap_content">
		<TextView android:id="@+id/title_tv" android:textColor="@color/white"
			android:paddingTop="3dip" android:textSize="24sp"
			android:layout_width="wrap_content" android:gravity="center"
			android:layout_centerInParent="true" android:layout_height="wrap_content"></TextView>
		<ImageView android:id="@+id/button_close" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:layout_marginRight="15dip"
			android:src="@drawable/green_icon_close"
			
			android:layout_centerVertical="true" android:layout_width="wrap_content"/>
	</RelativeLayout>
	<ListView android:id="@+id/listproc" android:layout_width="fill_parent"
		android:layout_height="0dip" android:cacheColorHint="#00000000"
		android:divider="@null" android:paddingLeft="5dip"
		android:paddingRight="5dip" android:layout_weight="1"></ListView>


</LinearLayout>
